<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gorilla.ohdeer"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ohdeer"
        android:label="@string/app_name"
        android:theme="@style/MyTheme" >
        <activity
            android:name="com.gorilla.ohdeer.Main"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
         <activity
            android:name="com.gorilla.ohdeer.StartGame"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.gorilla.ohdeer.STARTGAME" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
         <activity
            android:name="com.gorilla.ohdeer.Test"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.gorilla.ohdeer.TEST" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
    </application>

</manifest>
